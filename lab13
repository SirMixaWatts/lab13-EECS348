
// 2. Program to debug

#include <iostream>
#include <vector>
using namespace std;

// Original faulty function
bool faillecture_faulty(const vector<int>& attendance_records) {
    int absent_count = 0;
    for (int i = 1; i < attendance_records.size(); ++i) {
        absent_count += attendance_records[i] == 0;
    }
    return absent_count >= 3;
}

// Corrected function for verification
bool faillecture_correct(const vector<int>& attendance_records) {
    int absent_count = 0;
    for (int i = 0; i < attendance_records.size(); ++i) {
        absent_count += attendance_records[i] == 0;
    }
    return absent_count >= 3;
}

void test_case(const vector<int>& records, const string& test_name) {
    bool faulty_result = faillecture_faulty(records);
    bool correct_result = faillecture_correct(records);
    
    cout << "Test: " << test_name << endl;
    cout << "Attendance: ";
    for (int val : records) cout << val << " ";
    cout << endl;
    cout << "Faulty output: " << (faulty_result ? "FAIL" : "PASS") << endl;
    cout << "Correct output: " << (correct_result ? "FAIL" : "PASS") << endl;
    cout << "Matches expected: " << (faulty_result == correct_result ? "YES" : "NO") << endl;
    cout << "-----------------------------------" << endl;
}

